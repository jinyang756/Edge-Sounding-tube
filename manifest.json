{
  "manifest_version": 3,
  "name": "Dege Megaphone 传声筒",
  "version": "1.0.0",
  "description": "Voice recording, AI enhancement, and instant sharing sidebar.",
  "permissions": [
    "microphone",
    "sidePanel",
    "storage"
  ],
  "host_permissions": [
    "https://oapi.dingtalk.com/*",
    "https://qyapi.weixin.qq.com/*",
    "https://open.feishu.cn/*",
    "https://open.larksuite.com/*",
    "https://file.io/*"
  ],
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_title": "Open Dege Megaphone"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}